<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginB">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        style="@style/ww">
        <TextView
            android:text="手机号"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="60dp"></TextView>
        <EditText
            android:id="@+id/phoneedit"
            android:background="@drawable/edittext_bg2"
            style="@style/editText"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        style="@style/ww">
        <TextView
            android:text="密    码"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="60dp"></TextView>
        <EditText
            android:id="@+id/passwordedit1"
            android:background="@drawable/edittext_bg2"
            style="@style/editText"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        style="@style/ww">
        <TextView
            android:text="确认密码"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="60dp"></TextView>
        <EditText
            android:id="@+id/passwordedit2"
            android:background="@drawable/edittext_bg2"
            style="@style/editText"
            android:layout_width="185dp"></EditText>
    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:id="@+id/registerbtn"
        android:text="注册"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"></Button>

</LinearLayout>