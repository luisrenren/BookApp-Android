<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="80dp"
        android:id="@+id/us_sc_img"
        android:gravity="center"
        android:layout_height="80dp"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="230dp"
                android:id="@+id/us_sc_title"
                android:text="书名"
                android:textSize="16sp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/us_sc_price"
                android:text="价格："
                android:textColor="#C12A2A"
                android:textSize="16sp"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="5dp"
                android:layout_width="90dp"
                android:id="@+id/us_sc_category"
                android:text="类型"
                android:textColor="#A5A5A5"
                android:textSize="14sp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="200dp"
                android:id="@+id/us_sc_author"
                android:text="作者"
                android:textColor="#A5A5A5"
                android:textSize="14sp"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:id="@+id/us_sc_isbn"
            android:text="isbn"
            android:textColor="#C3C3C3"
            android:textSize="12sp"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

</LinearLayout>