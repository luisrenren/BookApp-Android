<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminUsers">

    <include
        android:id="@+id/admin2_top"
        android:layout_alignParentTop="true"
        layout="@layout/top2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></include>

    <LinearLayout
        android:id="@+id/admin2_tittle"
        android:background="#ECECEC"
        android:layout_below="@+id/admin2_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="用户名"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="50dp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:text="性别"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_height="50dp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:text="手机号"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_height="50dp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:text="密码"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="50dp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:text="生日"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="50dp"></TextView>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/user_listview"
        android:layout_below="@+id/admin2_tittle"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>