<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserBooks">
    <include
        android:id="@+id/user2_top"
        layout="@layout/top6_toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/search_c"
        android:layout_below="@+id/user2_top"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#F6F6F6"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="全部"
            android:id="@+id/all"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="教育"
            android:id="@+id/jiaoyu"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="文学"
            android:id="@+id/wenxue"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="科学"
            android:id="@+id/kexue"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="其他"
            android:id="@+id/qita"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/user_searchbooks_listview"
        android:layout_below="@+id/search_c"
        android:paddingBottom="55dp"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>