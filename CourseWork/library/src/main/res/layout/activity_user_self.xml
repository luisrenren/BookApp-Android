<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F1F1F1"
    android:layout_height="match_parent"
    tools:context=".UserSelf">
    <include
        android:id="@+id/user3_top"
        layout="@layout/top7_toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></include>

    <LinearLayout
        android:id="@+id/user_avatar_box"
        android:layout_below="@+id/user3_top"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:layout_weight="0.7 "
            android:text="头像"
            android:layout_height="wrap_content"></TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/user_avatar"
            android:src="@drawable/avatar"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_height="119dp"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_username_box"
        android:layout_below="@+id/user_avatar_box"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_height="60dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:text="用户名"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:id="@+id/user_username"
            android:text="我是用户名"
            android:textColor="#B6B6B6"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_gender_box"
        android:layout_below="@+id/user_username_box"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_height="60dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:text="性    别"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:id="@+id/user_gender"
            android:text="女"
            android:textColor="#B6B6B6"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_phone_box"
        android:layout_below="@+id/user_gender_box"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_height="60dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.65"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:text="手机号"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:id="@+id/user_phone"
            android:text="我是手机号"
            android:textColor="#B6B6B6"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_birthday_box"
        android:layout_below="@+id/user_phone_box"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_height="60dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:text="生    日"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:id="@+id/user_birthday"
            android:text="我是生日"
            android:textColor="#B6B6B6"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@+id/user_birthday_box"
        android:src="@drawable/userself"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content"></ImageView>


</RelativeLayout>