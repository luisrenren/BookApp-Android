<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".InputnameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/login"
        android:id="@+id/login_image"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"></ImageView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/login_image"
        android:text="注册成功！起个用户名吧！"
        android:textSize="25sp"
        android:id="@+id/pleaseinputname"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"></TextView>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:id="@+id/inputname"
        android:background="@drawable/edittext_bg2"
        style="@style/editText"
        android:layout_below="@+id/pleaseinputname"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"></EditText>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="260dp"
        android:layout_below="@id/inputname"
        android:id="@+id/inputnamebtn"
        android:text="就决定是这个了"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"></Button>


</RelativeLayout>