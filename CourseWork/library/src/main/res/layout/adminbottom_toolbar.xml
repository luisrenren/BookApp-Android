<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#D5895C"
        android:elevation="4dp"
        android:id="@+id/adminbottom_toolbar"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:layout_width="35dp"
            android:id="@+id/books_1"
            android:background="@drawable/admin_item1"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:tint="#F3F3F3"></ImageButton>

        <ImageButton
            android:layout_width="35dp"
            android:id="@+id/users_2"
            android:background="@drawable/admin_item2"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:tint="#F3F3F3"></ImageButton>

        <ImageButton
            android:layout_width="35dp"
            android:id="@+id/self_3"
            android:background="@drawable/admin_item3"
            android:layout_marginLeft="35dp"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:tint="#F3F3F3" />

    </androidx.appcompat.widget.Toolbar>
</LinearLayout>